---
interface Props {
	title: string;
	href: string;
}

const { title, href } = Astro.props;
---
<a 
	class="rounded-xl px-3 py-1 leading-6 text-gray-600 ring-1 ring-gray-900/10 hover:ring-gray-900/20 hover:transform hover:scale-110 hover:-rotate-2 hover:cursor-pointer"
	href={href}
>
	<p class="text-lg font-semibold leading-7 text-gray-900 text-center">
	{title}
  </p>
</a>