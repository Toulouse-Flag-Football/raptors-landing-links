---
interface Props {
  email: string;
}

const { email } = Astro.props;
---

<div class="flex flex-col items-center mt-8">
  <div
    class="flex flex-row gap-4 items-center rounded-full px-3 py-1 text-sm leading-6 text-gray-600 ring-1 ring-gray-900/10 hover:ring-gray-900/20"
  >
    <a href={`mailto:${email}`} class="">{email}</a>
  </div>
</div>
